-t I18n.t("_navigation.members")

%p#members_intro
  = I18n.t("index.user_introduction")
%table#members
  - @users.each do |user|
    %tr.member
      %td= link_to(image_tag(user.avatar.url(:small), :size => "48x48"), user)
      %td= link_to user.full_name, user
      - unless user.neighborhood.blank?
        %td= user.neighborhood
      - else
        %td ...
      - if not user.projects.empty?
        %td= pluralize(user.projects.count, I18n.t("index.project"))
      - else
        %td ...
      
%br/
